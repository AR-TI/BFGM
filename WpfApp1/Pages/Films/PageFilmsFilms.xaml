<Page x:Class="BFGM.Pages.Films.PageFilmsFilms"
      xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BFGM.Pages.Films"
      mc:Ignorable="d" 
      d:DesignHeight="460" d:DesignWidth="778"
      Title="PageFilmsFilms">

    <Grid fw:PointerTracker.Enabled="True" Background="#01FFFFFF">
        <StackPanel>
            <ListBox x:Name="ListBoxFilmsFilms" HorizontalAlignment="Left" Height="432" Margin="10,10,0,0" VerticalAlignment="Top" Width="758" BorderThickness="0" Loaded="ListBoxFilmsFilms_Loaded"
                     Background="Transparent" FontFamily="Book Antiqua" FontSize="16" Foreground="WhiteSmoke" ScrollViewer.VerticalScrollBarVisibility="Hidden" KeyDown="ListBoxFilmsFilms_KeyDown_Clipboard"/>
            <Button x:Name="ButtonAscendingFilms" Content="↑↓" Background="Transparent" Style="{StaticResource ButtonRoundRevealStyle}" BorderThickness="1" 
                    FontFamily="Book Antiqua" FontSize="12" Foreground="WhiteSmoke" Height="17" Width="50" Click="ButtonAscendingFilms_Click" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Page>
